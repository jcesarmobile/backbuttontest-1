<?xml version='1.0' encoding='utf-8'?>
<widget id="com.altshiftdev.coinster" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <name>Coinster</name>
    <description>I'm a crypto-tracking monster that can help you keep track of prices, events and more in real-time while also managing your earnings in a portfolio.</description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="http://192.168.1.130:8080/index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-navigation href="http://192.168.1.130:8080/index.html" />
    <allow-intent href="market:*" />
    <preference name="loglevel" value="DEBUG" />
</widget>
